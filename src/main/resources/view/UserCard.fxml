<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.skin.TableHeaderRow?>
<?import javafx.scene.control.TableColumn?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS" >
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>

            <Label styleClass="cell_big_label">My Profile</Label>

            <Separator>
                <padding>
                    <Insets bottom="3" top="5" right="5" />
                </padding>
            </Separator>

            <Label fx:id="userName" text="\$first" styleClass="display_small_label">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </Label>

            <FlowPane fx:id="tags">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </FlowPane>

            <Label fx:id="phone" styleClass="display_small_label" text="\$phone">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </Label>

            <Label fx:id="address" styleClass="display_small_label" text="\$address">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </Label>

            <Label fx:id="email" styleClass="display_small_label" text="\$email">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </Label>

            <Label fx:id="birthday" styleClass="display_small_label" text="\$birthday">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </Label>

            <FlowPane fx:id="freeTimes">
                <padding>
                    <Insets bottom="2" top="2" left="5" />
                </padding>
            </FlowPane>

        </VBox>
    </GridPane>
</HBox>
